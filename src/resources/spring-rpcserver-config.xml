<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.netty.NettyRPC.bean"/>
    <context:component-scan base-package="com.netty.NettyRPC.zk"/>
    <context:component-scan base-package="com.netty.NettyRPC.rpcclient"/>

    <context:property-placeholder location="classpath:config.properties"/>

    <!--配置zookeeper服务器注册端-->
    <bean id="serviceRegister" class="com.netty.NettyRPC.zk.ServiceRegister">
        <constructor-arg name="zkServerAddress" value="${zk.server.address}"/>
        <constructor-arg name="path" value="${zk.node.path}"/>
        <constructor-arg name="sessionTimeout" value="${zk.sessiontimeout}"/>
    </bean>

    <!-- 配置 RPC 服务器 -->
    <bean id="rpcServer" class="com.netty.NettyRPC.rpcserver.RPCServer">
        <constructor-arg name="serverAddress" value="${server.address}"/>
        <constructor-arg name="serviceRegister" ref="serviceRegister"/>
    </bean>
</beans>